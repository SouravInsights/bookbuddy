<!-- app/views/tags/index.html.erb -->
<div>
  <h1 class="text-3xl font-bold mb-6">Tags</h1>
  
  <% if @tags.empty? %>
    <div class="text-center py-10">
      <p class="text-gray-500">No tags yet!</p>
    </div>
  <% else %>
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <div class="p-6">
        <div class="flex flex-wrap gap-2">
          <% @tags.each do |tag| %>
            <%= link_to tag_path(tag), class: "inline-block px-3 py-2 bg-indigo-100 text-indigo-800 rounded-full hover:bg-indigo-200 transition mb-2" do %>
              <span><%= tag.name %></span>
              <span class="text-xs ml-1 bg-indigo-200 px-2 py-0.5 rounded-full"><%= tag.bookmark_count %></span>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>