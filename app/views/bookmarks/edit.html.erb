<!-- app/views/bookmarks/edit.html.erb -->
<div class="max-w-lg mx-auto">
  <h1 class="text-2xl font-bold mb-6">Edit Bookmark</h1>
  
  <%= form_with(model: @bookmark, class: "space-y-4") do |f| %>
    <% if @bookmark.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <h2><%= pluralize(@bookmark.errors.count, "error") %> prohibited this bookmark from being saved:</h2>
        <ul class="list-disc pl-5">
          <% @bookmark.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div>
      <%= f.label :title, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
  
    <div>
      <%= f.label :url, class: "block text-sm font-medium text-gray-700" %>
      <%= f.url_field :url, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
  
    <div>
      <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :description, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
    
    <div>
      <%= label_tag :tag_list, "Tags (comma separated)", class: "block text-sm font-medium text-gray-700" %>
      <%= text_field_tag :tag_list, @bookmark.tags.map(&:name).join(", "), class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
  
    <div>
      <%= f.label :private, class: "flex items-center" do %>
        <%= f.check_box :private, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500 mr-2" %>
        <span class="text-sm text-gray-700">Make private</span>
      <% end %>
    </div>
  
    <div>
      <%= f.submit "Update Bookmark", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  <% end %>
  
  <div class="mt-4">
    <%= link_to "Back to Bookmark", @bookmark, class: "text-indigo-600 hover:text-indigo-800" %>
  </div>
</div>