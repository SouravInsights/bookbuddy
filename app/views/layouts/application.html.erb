<!-- app/views/layouts/application.html.erb -->
<!DOCTYPE html>
<html>
  <head>
    <title>BookBuddy</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50 min-h-screen">
    <header class="bg-indigo-600 text-white shadow-md">
      <div class="max-w-6xl mx-auto px-4 py-3 flex justify-between items-center">
        <%= link_to "BookBuddy", root_path, class: "text-xl font-bold" %>
        
        <nav>
          <ul class="flex space-x-4">
            <%= link_to "Home", root_path, class: "hover:text-indigo-200" %>
            <% if current_user %>
              <%= link_to "New Bookmark", new_bookmark_path, class: "hover:text-indigo-200" %>
              <%= link_to "Tags", tags_path, class: "hover:text-indigo-200" %>
              <%= button_to "Logout", logout_path, method: :delete, class: "hover:text-indigo-200" %>
            <% else %>
              <%= link_to "Login", login_path, class: "hover:text-indigo-200" %>
              <%= link_to "Sign Up", signup_path, class: "hover:text-indigo-200" %>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>

    <main class="max-w-6xl mx-auto px-4 py-6">
      <% if flash[:notice] %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
          <%= flash[:notice] %>
        </div>
      <% end %>
      
      <% if flash[:alert] %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
          <%= flash[:alert] %>
        </div>
      <% end %>
      
      <%= yield %>
    </main>

    <footer class="max-w-6xl mx-auto px-4 py-6 text-center text-gray-500 text-sm">
      &copy; <%= Date.today.year %> BookBuddy - A Rails Learning Project
    </footer>
  </body>
</html>